.add-goods {
    background-color: #f5f5f5;
    padding: 20rpx;
  }
  
  .add-goods-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .add-goods-label {
    font-size: 28rpx;
    color: #000;
  }
  
  .add-goods-input,
  .add-goods-textarea {
    width: 70%;
    height: 60rpx;
    border: 1rpx solid #e4e4e4;
    border-radius: 4rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #000;
  }
  
  .add-goods-input:focus,
  .add-goods-textarea:focus {
    outline: none;
    border-color: #ff6a00;
  }
  
  .add-goods-switch {
    width: 120rpx;
    height: 60rpx;
  }
  
  .add-goods-size,.add-goods-color {
    display: flex;
    flex-wrap: wrap;
  }
  
  .add-goods-size checkbox,
  .add-goods-color checkbox {
    width: 33.3%;
  }
  
  .add-goods-btn {
    width: 100%;
    height: 84rpx;
    background-color: #ff6a00;
    color: #fff;
    font-size: 34rpx;
    border-radius: 4rpx;
    border: none;
    margin-top: 40rpx;
  }
  
  .add-goods-btn:focus {
    outline: none;
  }
  
  .add-goods-btn:active {
    background-color: #ff9119;
  }
  .add-goods-input,
.add-goods-textarea {
  font-family: 'Microsoft YaHei', Arial, sans-serif;
  font-weight: normal;
  font-style: normal;
}
.add-goods-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 4rpx;
    border: 1rpx dashed #666;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .add-goods-upload {
    background-color: #ff6a00;
    color: #fff;
    font-size: 24rpx;
    border: none;
    border-radius: 4rpx;
    padding: 10rpx 20rpx;
    margin-left: 20rpx;
  }
  
  .add-goods-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 4rpx;
    border: none;
  }
  
  